{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">
                    <div class="form-group">
                        <label for="username" class="control-label col-sm-4 required">{{ 'security.login.username'|trans }}</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="username" name="username" required="required" autofocus tabindex="10"/>
                            <p class="help-block">{{ 'resetting.request.username'|trans }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-offset-4 col-sm-8">
                            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans }}"  tabindex="20"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>