{% extends "@FOSUser/layout.html.twig" %}

{% block title %}{{ parent() }}&nbsp;&bull; {{ 'profile.show.title'|trans }}{% endblock %}

{% block headline %}{{ 'profile.show.title'|trans }}{% endblock headline %}

{% block content_row %}
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    {% block fos_user_content %}
                        {% include "@FOSUser/Profile/show_content.html.twig" %}
                    {% endblock fos_user_content %}
                    <div class="pull-right">
                        <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default " title="{{ 'profile.show.edit' | trans }}">
                            {{ 'profile.show.edit' | trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content_row %}
