{% trans_default_domain 'FOSUserBundle' %}


<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="form-group">
                        <label for="username" class="control-label col-sm-4 required">{{ 'security.login.username'|trans }}</label>
                        <div class="col-sm-8"><input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus tabindex="10"/></div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label col-sm-4 required">{{ 'security.login.password'|trans }}</label>
                        <div class="col-sm-8"><input class="form-control" type="password" id="password" name="_password" required="required" tabindex="20"/></div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-4">
                            <div class="checkbox">
                                <label class="">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" tabindex="30"/>
                                    {{ 'security.login.remember_me'|trans }}
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-4">
                            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  tabindex="30"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
