{% extends '@App/settings/base.html.twig' %}

{% set settings_entity_show = 'settings_criticity_show' %}

{% block title %}{{ 'settings.criticity.edit.title %name%'|trans({'%name%': criticity.name})}} Â· {{ parent() }}{% endblock title %}

{% block headline %}{% endblock %}

{% block content_settings %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">{{ 'settings.criticity.edit.title %name%'|trans({'%name%': criticity.name})}}</h1>
        </div>
        <div class="panel-body">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input class="btn btn-primary" type="submit" value="{{ 'settings.actions.edit' | trans }}" />
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock content_settings%}

{% block content_action %}
<h3>{{ 'settings.actions' | trans }}</h3>
{% if isDeletable %}
    {{ form_start(delete_form) }}
    {{ form_widget(delete_form) }}
{% endif %}
<div class="text-center" id="settings-actions">
    <div class="btn-group-vertical">
        <a class="btn-mini btn btn-default" href="{{ path('settings_criticity_index') }}">
            <span class="fa fa-thermometer-half"></span>&nbsp;{{ 'settings.actions.back.list' | trans }}
        </a>
        <a class="btn-mini btn btn-default" href="{{ path('settings_criticity_show', { 'id': criticity.id }) }}">
            <span class="fa fa-eye"></span>&nbsp;{{ 'settings.actions.show' | trans }}
        </a>
    {% if isDeletable %}
        <a class="btn btn-danger btn-mini confirm-delete" data-toggle="modal" data-target="#confirm-delete" data-form="form" href="#">
            <span class="fa fa-trash-o"></span>&nbsp;{{ 'settings.actions.delete' | trans }}
        </a>
    {% else %}
        <span class="btn btn-danger disabled">
            <span class="fa fa-trash-o"></span>&nbsp;{{ 'settings.actions.delete' | trans }}
        </span>
    {% endif %}
    </div>
</div>
    {% if isDeletable %}
        {{ form_end(delete_form) }}
    {% endif %}
{% endblock content_action %}