{% extends '@App/base.html.twig' %}

{% block title %}{{ 'setting.family.edit.title %name%'|trans({'%name%': family.name})}}{% endblock title %}

{% block headline %}{% endblock %}

{% block content_content %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">{{ 'setting.family.edit.title %name%'|trans({'%name%': family.name})}}</h1>
        </div>
        <div class="panel-body">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input class="btn btn-primary" type="submit" value="{{ 'settings.actions.edit' | trans }}" />
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock content_content %}

{% block content_sidebar %}
    <h3>{{ 'settings.actions' | trans }}</h3>
    <div class="text-center">
        <div class="btn-group-vertical">
            <a class="btn-mini btn btn-default btn-mini" href="{{ path('settings_family_index') }}">
                <span class="fa fa-list"></span>&nbsp;{{ 'settings.actions.back.tree' | trans }}
            </a>
            <a class="btn-mini btn btn-default btn-mini" href="{{ path('settings_family_show',{'slug': family.slug}) }}">
                <span class="fa fa-eye"></span>&nbsp;{{ 'settings.actions.back.show' | trans }}
            </a>
        </div>
    </div>
    <hr/>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'setting.information' | trans }}</h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>{{ 'setting.created.by' | trans}}</dt>
                <dd>{{ family.creator.username }}</dd>
                <dt>{{ 'setting.created.at' | trans}}</dt>
                <dd>{{ family.created | localizeddate('short', 'short') }}</dd>
            </dl>
        </div>
    </div>
{% endblock content_sidebar %}
