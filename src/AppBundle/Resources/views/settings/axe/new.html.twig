{% extends '@App/settings/base.html.twig' %}

{% block title %}{{ 'settings.status.create.title'|trans }} Â· {{ parent() }}{% endblock title %}

{% block headline %}{% endblock %}

{% block content_content %}

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h1 class="panel-title">{{ 'settings.axe.create.title'|trans }}</h1>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input class="btn btn-primary" type="submit" value="{{ 'settings.actions.create' | trans }}" />
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock content_content %}

{% block content_action %}
<h3>{{ 'settings.actions' | trans }}</h3>
<div class="text-center" id="settings-actions">
    <div class="btn-group-vertical">
        <a class="btn-mini btn btn-default" href="{{ path('settings_axe_index') }}">
            <span class="fa fa-road"></span>&nbsp;{{ 'settings.actions.back.list' | trans }}
        </a>
    </div>
</div>
{% endblock content_action %}
