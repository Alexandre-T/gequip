{% extends '@App/base.html.twig' %}

{% block title %}{{ 'setting.family.show.title %name%'|trans({'%name%': famille.name})}}{% endblock title %}

{% block headline %}{{ 'setting.family.show.title %name%'|trans({'%name%': famille.name})}}{% endblock %}

{% block content_content %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'setting.global-information' | trans }}</h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt class="lead">{{ 'setting.family.name'| trans }}</dt>
                <dd class="lead">{{ famille.name }}</dd>
                <dt>{{ 'setting.family.root'| trans }}</dt>
                <dd>{{ famille.root.name }}</dd>
                <dt>{{ 'setting.family.parent'| trans }}</dt>
                <dd>{{ famille.parent.name }}</dd>
            </dl>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'setting.log' | trans }}</h3>
        </div>
        <div class="panel-body">
            <ul>
                <li>
                    {# @TODO add log data #}@TODO
                </li>
            </ul>
        </div>
    </div>
{% endblock content_content %}

{% block content_sidebar %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'setting.information' | trans }}</h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>{{ 'setting.created.by' | trans}}</dt>
                <dd>{{ famille.creator.username }}</dd>
                <dt>{{ 'setting.created.at' | trans}}</dt>
                <dd>{{ famille.created | localizeddate('short', 'short') }}</dd>
            </dl>
        </div>
    </div>
{% endblock %}
